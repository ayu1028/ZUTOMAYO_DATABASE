<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <meta name="twitter:card" content="summary">
    <meta property="twitter:title" content="<%= title %>">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      <header>
        <div class="header-content">
          <a href="/">
            <h1>ZUTOMAYO DATABASE</h1>
          </a>
        </div>
      </header>
      <main>
        <h2>ライブセットリスト集</h2>
        <ul>
          <% contents.forEach((content) => { %>
          <% const date = new Date(content.liveDate); %>
          <% const str = `${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`; %>
          <li>
            <a href="/live/<%= content.id %>">
              <div>
                <h3><%= content.liveTitle %></h3>
                <p><%= str %></p>
                <p>@<%= content.hako.hakoName %></p>
              </div>
            </a>
          </li>
          <% }); %> 
        </ul>
      </main>
      <footer>
        <div class="footer-content">
          <p>ZUTOMAYO DATABASE</p>
          <a href="https://twitter.com/ayu_nanet_sun">twitter</a>
          <a href="https://github.com/ayu1028">github</a>
        </div>

      </footer>
    </div>
  </body>
</html>
