<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <script src="https://kit.fontawesome.com/f408a441a0.js" crossorigin="anonymous"></script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-BTPSL4VJ85"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'G-BTPSL4VJ85');
    </script>
  </head>
  <body>
    <nav>
      <div class="side-menu-button-close">
          <i class="fa-solid fa-xmark fa-2xl"></i>
      </div>
      <div class="nav-contents">
        <a href="/">
          TOP
        </a>
        <a href="/setlist">
          SETLISTS
        </a>
        <a href="/song">
          SONGS
        </a>
        <a href="/counter">
          ZUTOMAYO COUNTER
        </a>
        <% if(typeof userId !== 'undefined') { %>
        <a href="/mypage">
          MY PAGE
        </a>
        <% } %>
      </div>
    </nav>
    <div class="container">
      <header>
        <div class="side-menu-button">
            <i class="fa-solid fa-bars fa-xl"></i>
        </div>
        <div class="header-content">
          <a href="/">
            <h1>ZUTOMAYO DATABASE</h1>
          </a>
        </div>
        <div class="login_button">
          <% if(typeof userId !== 'undefined') { %>
          <a href="/logout">
            <i class="fa-solid fa-right-from-bracket fa-xl"></i>
          </a>
          <% } else { %>
          <a href="/login/twitter">
            <i class="fa-solid fa-right-to-bracket fa-xl"></i>
          </a>
          <% } %>
        </div>
      </header>
      <main>
        <div>
          <h2><%= lives.liveTitle %></h2>
          <% const date = new Date(lives.liveDate); %>
          <% const str = `${date.getFullYear()}年${date.getMonth() + 1}月${date.getDate()}日`; %>
          <p><%= str %></p>
          <p>@<%= lives.hako.hakoName %></p>
        </div>
        <h3>LIVE セットリスト</h3>
        <ul>
          <% songs.forEach((song) => { %>
          <li>
            <a href="/song/<%= song.songId %>">
              <div>
                <h2><%= song.number %>. <%= song.song.songName %>
                  <% if(song.encoreFlag === 1) { %>
                    (アンコール)
                  <% } %></h2>
                  <% if(song.song.special === 2) { %>
                  <p><%= song.song.remark %></p>
                  <% } %>
                  <% if(song.remark) { %>
                  <p><%= song.remark %></p>
                  <% } %>
              </div>
            </a>
          </li>
          <% }); %>
        </ul>
      </main>
      <footer>
        <div class="footer-content">
          <p>ZUTOMAYO DATABASE</p>
          <a href="https://twitter.com/ayu_nanet_sun" target="_blank" rel="noopener noreferrer">twitter</a>
          <a href="https://github.com/ayu1028" target="_blank" rel="noopener noreferrer">github</a>
        </div>

      </footer>
    </div>
    <script src="/javascripts/menu.js"></script>
  </body>
</html>
